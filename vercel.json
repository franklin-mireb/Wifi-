{
  "version": 2,
  "name": "wifi-manager",
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ],
  "env": {
    "FLASK_ENV": "production",
    "PYTHONPATH": "/var/task",
    "SECRET_KEY": "@secret_key",
    "ROUTER_IP": "@router_ip",
    "ROUTER_USER": "@router_user",
    "ROUTER_PASS": "@router_pass"
  }
}
